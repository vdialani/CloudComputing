<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_3_0.xsd"
	version="3.0">
	<display-name>Cloud Computing Course</display-name>
	<context-param>
		<param-name>course.cloud.computing.workers</param-name>
		<param-value>5</param-value>
	</context-param>
	<context-param>
		<param-name>course.cloud.computing.timeout</param-name>
		<param-value>20</param-value>
	</context-param>
	<context-param>
		<param-name>course.cloud.computing.queuedepth</param-name>
		<param-value>5000</param-value>
	</context-param>
	<listener>
		<listener-class>course.cloud.computing.queue.ServletContextListener
		</listener-class>
	</listener>
	<servlet>
		<servlet-name>myapp</servlet-name>
		<servlet-class>
			com.sun.jersey.spi.container.servlet.ServletContainer
		</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>course.cloud.computing.rest</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>myapp</servlet-name>
		<url-pattern>/myapp/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>enterprise</servlet-name>
		<servlet-class>
			com.sun.jersey.spi.container.servlet.ServletContainer
		</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>course.cloud.computing.queue</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>enterprise</servlet-name>
		<url-pattern>/enterprise/*</url-pattern>
	</servlet-mapping>
</web-app> 